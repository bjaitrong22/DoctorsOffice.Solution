@{
  Layout = "_Layout";
}

@model DoctorsOffice.Models.Patient

<h2>Edit</h2>

<h4>Edit this item: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.PatientId)

  @Html.LabelFor(model => model.Name)
  @Html.EditorFor(model => model.Name)

  @Html.LabelFor(model => model.BirthDate)
  @Html.EditorFor(model => model.BirthDate)

  @Html.LabelFor(model => model.Doctor)
  @Html.DropDownList("DoctorId")

  <input type="submit" values="Save" />
}

<p>@Html.ActionLink("Back to Manage Patients", "Index")</p>