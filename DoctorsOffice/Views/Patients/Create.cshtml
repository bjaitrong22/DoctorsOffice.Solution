@{
  Layout = "_Layout";
}

@model DoctorsOffice.Models.Patient

<h4>Add a new patient</h4>

<P>@Html.ValidationMessageFor(model => model.Name,"", new {@class ="text-danger", @style="font-weight:600;"})</P>

<P>@Html.ValidationMessageFor(model => model.BirthDate,"", new {@class ="text-danger", @style="font-weight:600;"})</P>

@using (Html.BeginForm())
{
  @Html.ValidationSummary(true)
  
  @Html.LabelFor(model => model.Name, "Name: " )
  @Html.TextBoxFor(model => model.Name)
  
  @Html.LabelFor(model => model.BirthDate, "Birthdate: ")
  @Html.TextBoxFor(model => model.BirthDate)
  
  @Html.LabelFor(model => model.Doctor)
  @Html.DropDownList("DoctorId")

  <input type="submit" value="Add new patient" class="btn btn-default" />
}

